---
type Route = Pick<astroHTML.JSX.AnchorHTMLAttributes, "href"> & {
  text: string;
};

const routes: Route[] = [
  { href: "/", text: "ednoesco" },
  { href: "/blogs", text: "blogs" },
  { href: "/gpg", text: "gpg" },
];
---

<nav>
  {routes.map(({ href, text }) => <a href={href}>{text}</a>)}
</nav>

<style>
  nav {
    display: flex;
    justify-content: flex-end;
    padding: var(--spacing-4) var(--spacing-8);
  }

  nav > a {
    padding-right: var(--spacing-4);
  }

  nav > a:last-child {
    padding-right: 0;
  }
</style>
